datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id                       Int      @id @default(autoincrement())
  clientId                 String   @unique
  clientSecret             String?
  grantTypes               String[]
  redirectUris             String[]
  responseTypes            String[]
  tokenEndpointAuthMethod  String   @default("client_secret_basic")
}

model Grant {
  id        String   @id @default(cuid())
  accountId String
  clientId  String
  scopes    Json     // array de escopos
  resources Json?    // array de recursos
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([accountId, clientId])
}
model Tokens {
  id        String   @id
  data      Json
  grantId  String @default("")
  userCode String @default("")
  tipo      String
  uid String @default("")
  expiresAt DateTime?
}

